@using RoadStones_Utility
@model IEnumerable<Product>


@if (Model.Any())
{ 
<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="col-12 col-lg-3">
                                        Product Details
                                    </div>
                                }
                                else
                                {
                                    <div class="col-12 col-lg-7">
                                        Product Details
                                    </div>
                                }
                                
                                <div class="col-12 col-lg-2">
                                    Price per square meter(m²)
                                </div>

                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="col-6 col-lg-2">
                                        Square meter(m²)
                                    </div>
                                    <div class="col-6 col-lg-2">
                                        Total price
                                    </div>
                                }
                               
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr />
                        @{
                            var orderTotal = 0.0;
                        }

                        @foreach (var item in Model)
                        {

                            <div class="row h-100">
                                <div class="col-4 col-md-2 text-center py-2">
                                    <img src="@WebConstants.ImagePath@item.Image" class="rounded" width="100%" />
                                </div>
                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="col-8 col-lg-3">
                                        <h5>@item.Name</h5>
                                        <div style="font-size:11px;">@item.ShortDescription</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-8 col-lg-7">
                                        <h5>@item.Name</h5>
                                        <div style="font-size:11px;">@item.ShortDescription</div>
                                    </div>
                                }
                               
                                <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;">@item.Price€</span>/ m²

                                </div>
                                
                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="col-4 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <input type="text" asp-for="@item.TempSqMeters" class="form-control"/>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;">@(item.Price*item.TempSqMeters)€</span>
                                    </div>
                                }
                                <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                            orderTotal += item.Price * item.TempSqMeters;
                        }
                        <hr />
                        @if (User.IsInRole(WebConstants.AdminRole))
                        {
                            <div class="row">
                                <div class="col-12 text-right pr-4" style="color:#821f3d">
                                 Order Total : @string.Format("{0:c}", orderTotal);
                                </div>
                            </div>
                        }

                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Continue</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
}
else
{
    <p>Please add items to cart</p>
}
